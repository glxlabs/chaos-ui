{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": [
    "src/components/ui/**/*",
    "src/components/layout/**/*",
    "src/utils/**/*",
    "src/hooks/**/*",
    "src/contexts/**/*",
    "src/lib/**/*"
  ],
  "exclude": [
    "src/components/sections/**/*",
    "src/components/showcase/**/*",
    "src/main.tsx",
    "src/App.tsx",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
